<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".SettingsActivity">
    <Button
        android:id="@+id/set_main_alarm_sound"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/button_set_main"/>
    <Button
        android:id="@+id/set_bother_alarm_sound"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/button_set_bother"/>
    <NumberPicker
        android:layout_width="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="150dp"
        android:id="@+id/numpick"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/numdisplay"
        android:gravity="center"
        android:text="Random Number: N"/>
</LinearLayout>
